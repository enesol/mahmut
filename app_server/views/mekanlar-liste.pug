extends layout
include ortak_fonksiyonlar/fonksiyonlar
mixin puanOlustur(puan)
 -for(var i=1;i<=puan;i++)
  span.glyphicon.glyphicon-star
 -for(var j=puan;j<5;j++)
  span.glyphicon.glyphicon-star-empty
block content
  //Başlık bölümündeki bilgileri ayarlaya
  #banner.page-header
    //satır oluştur
    .row
      .col-lg-6
        h1 #{sayfaBaslik.siteAd}
          small &nbsp;#{sayfaBaslik.aciklama}
  .row
    //mobil uyumlu listeleme
    .col-xs-12.col-sm-12
      //Liste grubu oluştur
      each mekan in mekanlar
        .row.list-group
         .col-xs-12.list-group-item
             h4
               a(href='/mekan/') #{mekan.ad}
               small &nbsp;
               +puanOlustur(mekan.puan)
             span.badge.pull-right.badge-default #{mekan.mesafe}
             p.address #{mekan.adres}
             p
              each imkanlar in mekan.imkanlar
                span.label.label-warning #{imkanlar}
                | &nbsp;    
      .col-xs-12.col-sm-4